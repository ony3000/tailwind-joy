{
  "singleQuote": true,
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["apps/**"],
      "options": {
        "plugins": ["prettier-plugin-tailwindcss"]
      }
    },
    {
      "files": ["packages/**"],
      "options": {
        "plugins": ["@trivago/prettier-plugin-sort-imports"],
        "importOrder": ["<THIRD_PARTY_MODULES>", "^@/", "^\\.\\./", "^\\./"]
      }
    }
  ]
}
